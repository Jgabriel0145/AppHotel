<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHotel.View.ContratacaoHospedagem"
             BackgroundColor="#8B4513">
    <ContentPage.Content>

        <StackLayout>

            <Label Text="Hospedagem" 
                   HorizontalOptions="Center"
                   FontSize="30" TextColor="White"/>

            <Label x:Name="lbl_usuario"
                   HorizontalTextAlignment="Center"
                   TextColor="White" />

            <Frame BackgroundColor="#F5DEB3"
                   CornerRadius="10"
                   Margin="10, 0, 10, 10" Padding="20">

                <StackLayout>
                    <Grid ColumnDefinitions="*, *, 2*" RowDefinitions="*, *">
                        <Label Grid.Column="0" Grid.Row="0" Text="Adultos: "/>
                        <Label Grid.Row="0" Grid.Column="0" x:Name="lbl_qtd_adultos"
                               BindingContext="{x:Reference stepperAdultos}"
                               Text="{Binding Value}"/>
                        <Stepper Grid.Row="0" Grid.Column="2" x:Name="stepperAdultos"
                                 Minimum="0" Maximum="10" Increment="1"/>


                    </Grid>
                </StackLayout>

            </Frame>



        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>